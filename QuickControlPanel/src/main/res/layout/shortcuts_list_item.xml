<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="@dimen/shortcuts_sort_item_drawable_height"
        android:layout_height="@dimen/shortcuts_sort_item_drawable_height"
        android:layout_alignParentLeft="true" />
    
    
    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_image"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/shortcuts_sort_item_height" />
    
    

    

</RelativeLayout>